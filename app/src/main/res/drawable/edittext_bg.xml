<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="@android:color/white" />

    <!-- Viền xám -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Padding trong -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
