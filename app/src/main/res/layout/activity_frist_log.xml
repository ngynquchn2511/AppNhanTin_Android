<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nesvie"
            android:textStyle="bold"
            android:textSize="29dp"
            android:textColor="@color/primary_blue"
            android:textAlignment="center"
            android:layout_marginTop="64dp"
            />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:id="@+id/background_signin_signup"
            android:src="@drawable/background_signin_signup"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleNesvie"
            android:text="Kéo gần khoảng cách"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtGioiThieuNesvie"
            android:text="Nesvie ứng dụng nhắn tin trực tuyến được tạo bởi sinh viên trường Đại học Công nghệ Đông Á"
            android:layout_marginTop="2dp"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:text="Đăng nhập"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#0099FF"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUp"
            android:text="Tạo tài khoản mới"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#D3D3D3"
            android:textColor="#000000"
            />

    </LinearLayout>


</LinearLayout>