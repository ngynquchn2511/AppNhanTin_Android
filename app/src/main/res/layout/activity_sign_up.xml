<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_in"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrows"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập email đăng ký"
            android:textSize="19dp"
            android:textStyle="bold"

            android:layout_marginTop="110dp"
            android:paddingRight="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_selector"
            android:id="@+id/edtEmail"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            android:id="@+id/txtNhapMatKhau"
            android:paddingRight="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_selector"
            android:id="@+id/edtPassword"
            android:hint="Mật khẩu"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập tên đăng nhập"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            android:id="@+id/txtNhaptenhienthi"
            android:paddingRight="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_selector"
            android:id="@+id/edtTenHienThi"
            android:hint="Họ và tên "
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            />
        <RadioGroup
            android:id="@+id/radioGroupGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:checked="true"
                app:buttonTint="#0099FF"/>

            <RadioButton
                android:id="@+id/radioNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                app:buttonTint="#0099FF"/>

            <RadioButton
                android:id="@+id/radioKhac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                app:buttonTint="#0099FF"/>
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDangKy"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:backgroundTint="#0099FF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Đã tài khoản?"
                android:id="@+id/txtDaCoTaiKhoan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="79dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập "
                android:id="@+id/txtDangNhap"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:textSize="15dp"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>